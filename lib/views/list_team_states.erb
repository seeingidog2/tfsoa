<title>tfsoa States</title>

<h2>All <%=@team.capitalize %> States</h2>

<div class="row">
  <div class="span8">
    <table class="table table-bordered">
      <tr>
        <th>TF Project</th>
        <th>Environment</th>
        <th>State Updates</th>
      </tr>
      <% @all_states.each do |state| %>
        <tr>
          <td>
            <a href=<%= "/show/#{state.unique_tf_state}" %>>
              <%= state.jenkins_job_name %>
            </a>
          </td>
          <td>
            <span class="label label-warning"><%= state.environment %></span>
          </td>
          <td>
            <span class="badge badge-info"><%= state.state_details.count %></span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
